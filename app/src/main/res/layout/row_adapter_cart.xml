<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/productcart_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_launcher_foreground"
            />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="31dp"
                android:layout_toStartOf="@+id/text_product_count"
                android:gravity="center"
                android:text="+" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:id="@+id/delete_item_button"
                android:background="@drawable/ic_baseline_delete_24"/>

            <TextView
                android:id="@+id/textcart_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="20dp"

                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/textcart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="TextView"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="13dp"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/text_product_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="27dp"
                android:layout_toStartOf="@+id/button_minus"
                android:text="1"
                android:textAlignment="center" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
